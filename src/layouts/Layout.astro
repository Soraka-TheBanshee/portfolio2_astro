---
import Footer from '../components/Footer.astro';
import HeaderCard from '../components/HeaderCard.astro';
import NavMenu from '../components/Navbar/NavMenu';

export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,500&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-gray-800 text-gray-300 p-5 h-[100dvh] ">
		<main class="flex flex-col h-full " >
			<NavMenu client:load/>
			<div class="mt-5">
				<h1 class="text-red-400 text-2xl font-bold text-center" >My perfect portfolio!</h1>
			</div>
			<div class="flex-auto">
				<slot />
			</div>
			<Footer /> 
		</main>
	</body>
</html>

