---
export interface Props {
  techs: string[]
}

const { techs } = Astro.props
---
<h3 class="text-center text-xl text-white font-bold" >I work with:</h3>
<ul class="flex flex-wrap justify-center gap-5 mt-5 max-w-[700px] mx-auto text-lg text-gray-800 font-poppins italic font-medium " >
  {techs.map(tech => <li class="px-3 py-2 bg-gray-200" >{tech}</li>)}
</ul>